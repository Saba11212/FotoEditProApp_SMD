<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="14dp"
    android:orientation="vertical"
    android:background="#FEFEFE"
    tools:context=".edit">

    <TextView
        android:id="@+id/tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Text"
        android:textColor="@color/logo"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="-32dp"
            android:src="@drawable/back_arrow" />

        <ImageView
            android:id="@+id/undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/back"
            android:src="@drawable/undo" />
        <ImageView
            android:id="@+id/redo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/undo"
            android:src="@drawable/redo" />
        <ImageView
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/redo"
            android:src="@drawable/check" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:src="@drawable/img"/>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/addtext"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/addtext"/>

            <ImageView
                android:id="@+id/dropper"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_toRightOf="@+id/addtext"
                android:src="@drawable/dropper"/>


            <ImageView
                android:id="@+id/c1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@+id/dropper"
                android:src="@drawable/c1" />

            <ImageView
                android:id="@+id/c2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="0dp"
                android:layout_toRightOf="@+id/c1"
                android:src="@drawable/c2" />

            <ImageView
                android:id="@+id/c3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_toRightOf="@+id/c2"
                android:src="@drawable/c3"/>

            <ImageView
                android:id="@+id/c4"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_toRightOf="@+id/c3"
                android:src="@drawable/c4"/>

            <ImageView
                android:id="@+id/c5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_toRightOf="@+id/c4"
                android:src="@drawable/c5"/>
            <ImageView
                android:id="@+id/c6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_toRightOf="@+id/c5"
                android:src="@drawable/c6"/>


        </RelativeLayout>
    </HorizontalScrollView>
</LinearLayout>