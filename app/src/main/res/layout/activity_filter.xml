<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="14dp"
    android:orientation="vertical"
    android:background="#FEFEFE"
    tools:context=".edit">

    <TextView
        android:id="@+id/tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter"
        android:textColor="@color/logo"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="-32dp"
            android:src="@drawable/back_arrow" />

        <ImageView
            android:id="@+id/undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/back"
            android:src="@drawable/undo" />
        <ImageView
            android:id="@+id/redo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/undo"
            android:src="@drawable/redo" />
        <ImageView
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/redo"
            android:src="@drawable/check" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:src="@drawable/img"/>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/f1"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/img_1" />

        <ImageView
            android:id="@+id/f2"
            android:layout_width="60dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/f1"
            android:layout_height="match_parent"
            android:src="@drawable/img_2" />
        <ImageView
            android:id="@+id/f3"
            android:layout_width="60dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/f2"
            android:layout_height="match_parent"
            android:src="@drawable/img_3" />
        <ImageView
            android:id="@+id/f4"
            android:layout_width="60dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/f3"
            android:layout_height="match_parent"
            android:src="@drawable/img_4" />
        <ImageView
            android:id="@+id/f5"
            android:layout_width="60dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/f4"
            android:layout_height="match_parent"
            android:src="@drawable/img_5" />
        <ImageView
            android:id="@+id/f6"
            android:layout_width="60dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/f5"
            android:layout_height="match_parent"
            android:src="@drawable/img_6" />
        <ImageView
            android:id="@+id/f7"
            android:layout_width="60dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/f6"
            android:layout_height="match_parent"
            android:src="@drawable/img_7" />
    </RelativeLayout>
    </HorizontalScrollView>
</LinearLayout>